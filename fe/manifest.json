{
  "manifest_version": 2,

  "name": "Supportbot",
  "description": "An extension for posting to Slack and Pipedrive from Zendesk",
  "version": "1.0",

  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "mainview.html",
    "default_title": "SupportBot"
  },
  // "content_scripts": [{
  //   "matches":["https://pipedrive.zendesk.com/agent/tickets/*"],
  //   "run_at": "document_idle",
  //   "js": ["main.js"]
  // }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost:3000/"
  ]
}